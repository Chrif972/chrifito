<body>
    <div class="presentation-container">
        <button class="back-button" onclick="window.history.back()">رجوع</button>
        <img id="productImage" class="product-image" src="" alt="">
        <div class="product-description">
            <h2 id="productName"></h2>
            <p id="productPrice"></p>
            <p id="productDescription"></p>
        </div>
        <div class="control-buttons">
            <button class="control-button" onclick="prevProduct()">السابق</button>
            <button class="control-button" onclick="nextProduct()">التالي</button>
        </div>
    </div>

    <script src="https://cdn.firebase.com/libs/firebase/9.6.1/firebase-app.js"></script>
    <script src="https://cdn.firebase.com/libs/firebase/9.6.1/firebase-database.js"></script>
    <script>
        // Firebase configuration
        const firebaseConfig = {
            apiKey: "AIzaSyD6qlt1NBcaqzCKVkhMBLz76NlpRC36UPs",
            authDomain: "yttutorialfb-bb7c9.firebaseapp.com",
            databaseURL: "https://yttutorialfb-bb7c9-default-rtdb.firebaseio.com",
            projectId: "yttutorialfb-bb7c9",
            storageBucket: "yttutorialfb-bb7c9.appspot.com",
            messagingSenderId: "1012190612930",
            appId: "1:1012190612930:web:5991393b3b17b080e51666"
        };

        firebase.initializeApp(firebaseConfig);
        const db = firebase.database();

        let products = [];
        let currentIndex = 0;
        let slideshowInterval;

        // Get products from Firebase
        db.ref("Producto").orderByChild("id").limitToLast(100).on("value", (snapshot) => {
            products = [];
            snapshot.forEach(child => {
                const producto = child.val();
                if (producto.cantidad > 0) {
                    producto.id = child.key;
                    products.push(producto);
                }
            });

            if (products.length > 0) {
                displayProduct(currentIndex);
                startSlideshow();
            }
        });

        function displayProduct(index) {
            const product = products[index];
            if (product) {
                document.getElementById("productImage").src = product.url || "";
                document.getElementById("productName").textContent = product.descrepcion || "";
                document.getElementById("productPrice").textContent = `${product.pventa || 0} درهم`;
                document.getElementById("productDescription").textContent = product.descripcion || "";
            }
        }

        function startSlideshow() {
            clearInterval(slideshowInterval);
            slideshowInterval = setInterval(() => {
                nextProduct();
            }, 5000); // 5 seconds
        }

        function nextProduct() {
            currentIndex = (currentIndex + 1) % products.length;
            displayProduct(currentIndex);
        }

        function prevProduct() {
            currentIndex = (currentIndex - 1 + products.length) % products.length;
            displayProduct(currentIndex);
        }

        // Clean up on page unload
        window.addEventListener("unload", () => {
            clearInterval(slideshowInterval);
        });
    </script>
